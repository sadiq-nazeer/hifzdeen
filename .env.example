# Public site URL (required for SEO: sitemap, Open Graph, canonical URLs). On Vercel, VERCEL_URL is used if unset.
NEXT_PUBLIC_SITE_URL=https://your-domain.com

QF_CLIENT_ID=your_client_id_here
QF_CLIENT_SECRET=your_client_secret_here
QF_OAUTH_TOKEN_URL=https://prelive-oauth2.quran.foundation/oauth2/token
QF_CONTENT_API_BASE_URL=https://apis-prelive.quran.foundation/content/api/v4
QF_DEFAULT_AUDIO_RECITER=7 # Mishari Rashid Al-Afasy

# Translation provider (optional): qf_with_legacy (default) or alquran
# - qf_with_legacy: QF + api.quran.com fallback (Tamil via legacy id 50, Sinhala not supported)
# - alquran: Use alquran.cloud for Tamil and Sinhala editions
TRANSLATION_PROVIDER=qf_with_legacy
NEXT_PUBLIC_TRANSLATION_PROVIDER=qf_with_legacy
ALQURAN_API_BASE_URL=https://api.alquran.cloud/v1

# User OAuth (optional; for sign-in and User APIs)
QF_ENV=prelive
QF_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback
QF_OAUTH_COOKIE_SECRET=  # e.g. openssl rand -hex 32

